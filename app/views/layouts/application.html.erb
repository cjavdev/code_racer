<!DOCTYPE html>
<html>
  <head>
    <title>Words Per Minute Challenge</title>
    <meta name="description" content="Challenge your friends to a typing race">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  <div id="wrap">
    <div id="wrap-inner">
      <%= yield %>
    </div>
  </div>
  <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= link_to "cjavilla.com", "http://cjavilla.com" %>
          <%= link_to "@w1zeman1p", "https://twitter.com/wizemanip", class: "pull-right" %>
        </div>
      </div>
    </div>
  </footer>

  <script src="//js.pusher.com/2.2/pusher.min.js" type="text/javascript"></script>
  <%= javascript_include_tag 'application' %>
  <%= yield :scripts %>
  <script>
    window.fbAsyncInit = function() {
      FB.init({ appId:'1616025808625237',xfbml:true,version:'v2.2'});
    };
    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>
  </body>
</html>
